{
  "name": "zip-extractor",
  "version": "1.0.0",
  "main": "src/main.js",
  "description": "Extract ZIP files easily using a desktop app",
  "author": "Ashwani Kumar",
  "license": "ISC",
  "build": {
    "appId": "com.ashwanikumar.zipextractor",
    "productName": "ZIP Extractor",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*"
    ]
  },
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:win": "electron-forge make --platform=win32 --arch=x64 --targets=@electron-forge/maker-zip",
    "make:win-arm": "electron-forge make --platform=win32 --arch=arm64 --targets=@electron-forge/maker-zip",
    "make:win-installer": "electron-forge make --platform=win32 --arch=x64",
    "make:mac": "electron-forge make --platform=darwin",
    "make:linux": "electron-forge make --platform=linux",
    "package:win": "electron-forge package --platform=win32 --arch=x64",
    "package:mac": "electron-forge package --platform=darwin",
    "generate-icons": "electron-icon-builder --input=./assets/icon-source.png --output=./assets --flatten"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-wix": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "icon-gen": "^5.0.0"
  }
}
